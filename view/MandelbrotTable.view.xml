<mvc:View
  controllerName="joltdx.shenanigans.mandelbrot.controller.MandelbrotTable"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <Panel
    headerText="{i18n>settingsPanelTitle}"
    width="auto">
    <content>
      <FlexBox
        alignItems="Center">
        <Label
          text = "{i18n>tableWidth}"
          class="sapUiTinyMarginEnd"/>
        <Input
          type="Number"
          value="{/mandelbrot/sizeX}"
          width="4rem"
          class="sapUiSmallMarginEnd"/>
        <Label
          text = "{i18n>tableHeight}"
          class="sapUiTinyMarginEnd"/>
        <Input
          type="Number"
          value="{/mandelbrot/sizeY}"
          width="4rem"
          class="sapUiSmallMarginEnd"/>
        <Label
          text = "{i18n>tableOffsetX}"
          class="sapUiTinyMarginEnd"/>
        <Input
          type="Number"
          value="{/mandelbrot/offsetX}"
          width="4rem"
          class="sapUiSmallMarginEnd"/>
        <Label
          text = "{i18n>tableOffsetY}"
          class="sapUiTinyMarginEnd"/>
        <Input
          type="Number"
          value="{/mandelbrot/offsetY}"
          width="4rem"
          class="sapUiSmallMarginEnd"/>
        <Label
          text = "{i18n>tableZoom}"
          class="sapUiTinyMarginEnd"/>
        <Input
          type="Number"
          value="{/mandelbrot/zoom}"
          width="4rem"
          class="sapUiSmallMarginEnd"/>
        <Button
          text="{i18n>settingsButtonLetsGoText}"
          type="Accept"
          press=".onSettingsLetsGo"
          class="sapUiTinyMarginEnd"/>
        <Button
          text="{i18n>settingsButtonResetText}"
          type="Attention"
          press=".onSettingsReset"/>
      </FlexBox>
    </content>
  </Panel>
  <Table
    id="mandelbrotTable"
    class="sapUiSizeCompact"
    showNoData="false"
    showSeparators="None"/>
</mvc:View>